<% provide(:title, 'Add New Movie') %>
<h1>Add Movie </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@movie) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control'  %>

      <%= f.label :category %>
      <%= f.text_field :category, class: 'form-control' %>


      <%= f.submit "Add this Movie", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>